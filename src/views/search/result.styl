.result-container
  min-height: 100%
  background-color: #f4f4f4
  .tab-container
    position: fixed
    top: 0
    left: 0
    width: 100%
    top: 2.2rem
    display: flex
    justify-content: space-between
    height: 2.2rem
    padding: 0 .625rem
    background-color: #ffffff
    box-sizing: border-box
    z-index: 1
    .tab-item
      flex: 1
      text-align: center
      .item
        position: relative
        display: inline-block
        padding: 0 .15rem
        line-height: 2.1rem
        font-size: .65rem
        color: #757575
        &.current
          color: #fb7299
          &:after
            position: absolute
            left: 0
            bottom: .3rem
            content: ""
            width: 100%
            border-bottom: .11rem solid #fb7299
  .result-wrapper
    padding-top: 2.2rem
    .sub-tab
      display: flex
      height: 2rem
      justify-content: space-between
      align-items: center
      padding: 0 1.1rem
      background-color: #f9f9f9
      .sort
        font-size: .65rem
        color: #757575
        &.current
          color: #fb7299
    .video-list
      padding: .45rem .625rem
      .video-wrapper
        position relative
        height: 3.654rem
        margin-top: .9rem
        overflow hidden
        &:first-child
          margin-top: 0
        .image-container
          position: relative
          float: left
          width: 5.875rem
          height: 100%
          border-radius: .3rem
          overflow: hidden
          background-color: #e7e7e7
          background-image: url("../../assets/images/tv.png")
          background-size: 3.654rem 3.654rem
          background-position: 1.1rem 0
          background-repeat: no-repeat
          img
            width: 100%
            height: @width
          .duration
            position: absolute
            right: .2rem
            bottom: .2rem
            padding: 0 .2rem
            font-size: .55rem
            line-height: .75rem
            color: #ffffff
            border-radius: 2px
            background-color: rgba(0, 0, 0, 0.3)
        .info-wrapper
          position: absolute
          left: 6.5rem
          p
            margin: 0
            height: 1.6rem
            line-height: .8rem
            overflow hidden
            text-align: left
            font-size: .7rem
            color: #212121
            letter-spacing: 0
            word-break: break-all
            :global(.keyword)
              font-style: normal
              color: #fb7299
          .owner-wrapper
            margin-top: .1rem
            height: 1.1rem
            line-height: 1.1rem
            .icon-up
              display: inline-block
              width: .7rem
              height: .6rem
              background-image: url("../../assets/images/ico-up.png")
              background-size: 100% 100%
              background-position: center center
              vertical-align: middle
            .owner
              font-size: .6rem
              color: #999999
              margin-left: .3rem
              vertical-align: middle
          .count-info
            margin-top: .1rem
            color: #999999
            font-size: 0
            span
              display: inline-block
              vertical-align: middle
            .icon-play, .icon-barrage
              width: .7rem
              height: .6rem
              background-size: 100% 100%
              background-position: center center
            .icon-play
              background-image: url("../../assets/images/ico-play.png")
            .icon-barrage
              margin-left: .75rem
              background-image: url("../../assets/images/ico-danmu.png")
            .play-count, .barrage-count
              margin-left: .3rem
              width: 2.8rem
              font-size: .55rem
  .up-user-list
    padding: 2.2rem .625rem .45rem .625rem
    .up-user-wrapper
      position relative
      height: 3rem
      margin-top: .9rem
      a
        text-decoration: none
      &:first-child
        margin-top: .6rem
      .face
        float: left
        width: 3rem
        height: @width
        border-radius: 50%
        overflow: hidden
        background: url("../../assets/images/noface.gif")
        background-size: 100% 100%
        img
          width: 100%
      .up-info
        margin-left: 3.6rem
        .name
          font-size: .7rem
          line-height: .7rem
          color: #212121
        .detail
          margin-top: .6rem
          font-size: .6rem
          line-height: .6rem
          color: #999999
          span:first-child
            display: inline-block
            width: 4.2rem
        .sign
          margin-top: .4rem
          height: .7rem
          line-height: .7rem
          font-size: .6rem
          color: #999999
          overflow hidden
  .tips
    padding: 1rem 0
    text-align: center
    img
      display: block
      width: 6.5rem
      margin: 0 auto
    .text
      font-size: .64rem
      color: #999999
  .loading
    position: absolute
    width: 100%
    top: 4.3rem
    bottom: 0
    padding-top: 8rem
    font-size: .65rem
    text-align: center
    color: #999999
